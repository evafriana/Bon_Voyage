<% content_for :minihead do %>
<div class="formhead">
<h1 class="h1 formtitle">Créer un nouvel évènement</h1>
</div>
<% end %>

<div class="container my-5">
    <div class="container py-3 mx-auto col-7 my-5">
      <div class="row justify-content-center">
        <div class="col-md-12">

          <%= form_for @event, url: {action: "create"}  do |form| %>

            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= form.label :city_name, 'Ville' %>
                  <%= form.text_field :city_name, class: 'form-control', placeholder: 'Paris',required: true %>
                </div>
              </div>
            </div>

            <div class="form-group mb-4">
              <%= form.label :name_event, 'Donnez un nom à votre évènement' %>
              <%= form.text_field :name_event, class: 'form-control', placeholder: 'Viste des musées de Paris', required: true %>
            </div>

            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= form.label :start_time, "Heure de début" %>
                  <%= form.time_field :start_time, class: 'form-control' %>
                </div>
                <div class="col-6">
                  <%= form.label :end_time, "Heure de fin" %>
                  <%= form.time_field :end_time, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group mb-4">
              <%= form.label :comment, 'Mettre un commentaire' %>
              <%= form.text_area :comment, class: 'form-control', placeholder: 'Journée extraordianaire à la découverte des plus beau musées de Paris. Je recommande fortement d\'aller les visiter.' %>
            </div>

            <div class="actions mt-5 text-center mb-5">
              <%= form.submit 'Enregistrer mon évènement', class: 'btn btn-primary btn-lg btn-block' %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
</div>