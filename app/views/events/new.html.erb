<div class="container my-5">
  <h2 class="text-center">Créer un nouvel évènement</h2>
    <div class="container py-3 mx-auto col-7 my-5">
      <div class="row justify-content-center">
        <div class="col-md-12">

          <h4 class="mb-4 text-primary"><%= @day.to_time.strftime("%A %d")%></h4>

          <%= form_tag trip_events_path(@trip, @event) do %>

            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= label_tag :city_name, 'Ville' %>
                  <%= text_field_tag :city_name, nil, class: 'form-control city-name', placeholder: 'Paris',required: true %>
                </div>
              </div>
            </div>

            <div class="form-group mb-4">
              <%= label_tag :name_event, 'Donnez un nom à votre évènement' %>
              <%= text_field_tag :name_event, nil, class: 'form-control', placeholder: 'Viste des musées de Paris', required: true %>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
              <%= text_field_tag :format, @day, class: 'd-none', readonly: true %>
                 </div>
              </div>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= label_tag :start_time, "Heure de début" %>
                  <%= time_select :start_time, nil, class: 'form-control' %>
                </div>
                <div class="col-6">
                  <%= label_tag :end_time, "Heure de fin" %>
                  <%= time_select :end_time, nil, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="form-group mb-4">
              <%#= label_tag :comment, 'Mettre un commentaire' %>
              <%#= text_area_tag :comment, nil, class: 'form-control', placeholder: 'Journée extraordianaire à la découverte des plus beau musées de Paris. Je recommande fortement d\'aller les visiter.' %>
            </div>

            <div class="actions mt-5 text-center mb-5">
              <%= submit_tag 'Enregistrer mon évènement', class: 'btn btn-primary btn-lg btn-block' %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
</div>
