<div class="collapse show" id="collapseWeek<%= index %>Day<%= ind %>">
  <div class="card mx-5 p-0 border mt-5">

    <div class="card-header h6 d-flex justify-content-between">
      <div class="">
        <i class="far fa-clock mr-2"></i>
        <%= event.start_time.strftime('%H:%M') unless event.start_time.nil? %>
        - <%= event.end_time.strftime('%H:%M') unless event.end_time.nil? %>
      </div>
      <div class="">
        <i class="fas fa-map-marker-alt mr-2"></i>
        <%= event.city_name %>
      </div>
      <div class="">
        <i class="fas fa-directions mr-2"></i>
        <%= event.name_event %>
      </div>
      
        <div class="">
          <!-- Affichage des boutons uniquement pour le trip owner -->
        <% if !user_trip_owner?(event.trip) %>
          <!-- Bouton pour copier-->
          <%= link_to copy_trip_event_path(event.trip, event), class: "mr-2" do%> <i class="fas fa-copy" title="Copier l'événement"></i><% end %>
        <% else %>
          <!-- Bouton pour modifier-->
          <%= link_to edit_trip_event_path(event.trip, event, day), class: "mr-2" do %><i class="fas fa-pencil-alt" title="Modifier l'évènement"></i><%end %>
          <!-- Bouton pour supprimer-->
          <%= link_to trip_event_path(event.trip, event), method: :delete, data: {confirm: "Etes-vous sûr?"} do %><i class="fas fa-trash-alt" title="Supprimer l'évènement"></i><% end %>
        <% end %>
        </div>
      
      <!-- ./Affichage des boutons uniquement pour le trip owner -->
    </div>

    <div class="container">
      <% if user_trip_owner?(event.trip) %>
        <div class="text-center mt-3">
           <!-- Bouton pour ajouter-->
            <%= link_to new_trip_event_note_path(event.trip, event), class: "btn btn-secondary mb-3" do %><i class="fas fa-plus mr-2"></i> Ajouter une note<% end %>

        </div>
      <% end %>
      <div class="card-columns thumbnail-sortable">
        <%= render event.notes %>
      </div>
    </div>
  </div>


  <div class="conatainer mx-5 p-0 mt-2">
    <% if event.trip.is_past? %>
      <!-- Si le voyage est passé, si je suis le créateur du voyage, si il n'y a pas de commentaire -->
      <% if user_trip_owner?(@trip) && event.comment == nil %>
        <button type="button" class="btn btn-primary btn-sm mt-3" data-toggle="modal" data-target="#myModal<%= index %>Day<%= ind %>"><i class="fas fa-plus mr-2"></i> Ajouter un commentaire</button>

          <!-- Modal -->
          <div class="modal fade" id="myModal<%= index %>Day<%= ind %>" role="dialog">
            <div class="modal-dialog modal-dialog-centered modal-lg">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">Ajouter un commentaire</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                  <%= form_tag trip_event_path(@trip, event), method: "patch" do %>
                    <div class="form-group mb-2">
                      <%= text_area_tag :comment, nil, class: 'form-control' %>
                    </div>
                </div>
                <div class="actions text-center mb-2">
                  <%= submit_tag 'Enregistrer mon commentaire', class: 'btn btn-primary btn-sm' %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>

      <!-- Si le voyage est passé, si je suis le créateur du voyage, si il y a déjà un commentaire -->
      <% if user_trip_owner?(@trip) && event.comment != nil %>
        <div class="card-footer border">
          <h5>Commentaire :</h5>
            <%= event.comment %>
        </div>
        <div class="">
          <button type="button" class="btn btn-primary btn-sm mt-3" data-toggle="modal" data-target="#myModal<%= index %>Day<%= ind %>"><i class="fas fa-pencil-alt mr-2"></i> Modifier mon commentaire</button>

          <!-- Modal -->
          <div class="modal fade" id="myModal<%= index %>Day<%= ind %>" role="dialog">
            <div class="modal-dialog modal-dialog-centered modal-lg">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">Modifier mon commentaire</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                  <%= form_tag trip_event_path(@trip, event), method: "patch" do %>
                    <div class="form-group mb-2">
                      <%= text_area_tag :comment, nil, class: 'form-control' %>
                    </div>
                </div>
                <div class="actions text-center mb-2">
                  <%= submit_tag 'Enregistrer mon commentaire', class: 'btn btn-primary btn-sm' %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Si le voyage est passé, si je ne suis pas le créateur du voyage, si il y a un commentaire -->
      <% if !user_trip_owner?(@trip) && event.comment != nil %>
        <div class="card-footer border">
          <h5>Commentaire :</h5>
            <%= event.comment %>
        </div>
      <% end %>

    <% end %>
  </div>
</div>