<div class="modal fade" id="week<%=index%>dayModal<%=ind%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-lg modal-dialog-centered modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Créer un évènement</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4 class="mb-4 text-primary"><%= l(day.to_date, format: '%A %d')%></h4>

          <%= simple_form_for @trip.events.build, url: trip_events_path(@trip, @event), remote: true do |form| %>

            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= form.label :city_name, 'Ville' %>
                  <%= form.text_field :city_name, class: 'form-control city-name', placeholder: 'Paris',required: true %>
                </div>
              </div>
            </div>

            <div class="form-group mb-4">
              <%= form.label :name_event, 'Donnez un nom à votre évènement' %>
              <%= form.text_field :name_event, class: 'form-control', placeholder: 'Viste des musées de Paris', required: true %>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= text_field_tag :format, day, class: 'd-none', readonly: true %>
                 </div>
              </div>
            </div>
            <div class="form-group mb-4">
              <div class="row">
                <div class="col-6">
                  <%= form.label :start_time, "Heure de début" %>
                  <%= form.time_select :start_time, class: 'form-control' %>
                </div>
                <div class="col-6">
                  <%= form.label :end_time, "Heure de fin" %>
                  <%= form.time_select :end_time, class: 'form-control' %>
                </div>
              </div>
            </div>
      </div>
      <div class="modal-footer">
        <%= form.submit 'Enregistrer mon évènement', class: 'btn btn-primary btn-lg mx-auto' %>
        <% end %>
      </div>
    </div>
  </div>
</div>