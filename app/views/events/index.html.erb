<div class="container fluid my-5">
  <%#= link_to "Ajouter un event", new_trip_event_path(@trip), class: "btn btn-secondary mt-5" %>
    <h1 class="h1 mt-5"><%= @trip.title %></h1>

  <!-- Ligne de présentation du voyage -->
  <div class="row mt-5">
    <div class="col-md-7 text-center">
        <img class="img-fluid rounded mb-3 mb-md-0" src="https://images.pexels.com/photos/346768/pexels-photo-346768.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="" style="height: 300px;">
    </div>
    <div class="col-md-5">
      <h3>Par <%= link_to user_path(@trip.user) do %><%= @trip.user.email %><% end %></h3>
      <div class="d-flex text-secondary small">
        <div class="flex-fill"><i class="fa fa-location-arrow"></i><%= @trip.country_name %></div>
        <div class="flex-fill"><i class="fa fa-calendar"></i><%= @trip.start_date.strftime ("%m/%d/%Y") %> - <%= @trip.end_date.strftime ("%m/%d/%Y") %></div>
      </div>
      <p class="mt-3"><%= @trip.description%></p>
      
      <%= link_to "Voir la synthèse du voyage", trip_path(@trip), class: "btn btn-primary" %>

    </div>
  </div>
  <!-- /.Ligne de présentation du voyage -->

  <!-- Séparation -->
  <hr class="my-5">
  <!-- /.Séparation -->

  <!-- Accordeon -->
  <div class="accordion" id="accordionWeek">
    <!-- Affichage semaines dans une card -->
    <div class="card p-0">
      <% @trip.week_weeks_days.each_with_index do |week, index| %>
        <!-- Affichage numéro de semaine dans le card-header -->
        <div class="card-header" id="headingWeek<%= index %>" >
          <h2 class="mb-0">
            <button class="btn btn-block text-left d-flex" type="button" data-toggle="collapse" data-target="#collapseWeek<%= index %>" aria-expanded="true" aria-controls="collapseWeek<%= index %>">
              <!-- Semaine -->
              <div class="flex-fill">
                <i class="fa fa-calendar mr-2"></i>
                Semaine <%= index + 1 %> - <%= week[0].strftime('%d %B %Y') %>
              </div>
              <!-- ./ Semaine -->
              <!-- Pays -->
              <div>
                <i class="fa fa-location-arrow"></i>
                <%= @trip.country_name %> 
              </div>
              <!-- ./ Pays -->
              <!-- A FAIRE Afficher nom des villes visitées dans la semaine -->
            </button>
          </h2>
        </div>
        <!-- ./Card header -->

        <!-- Affichage Journée -->
        <div id="collapseWeek<%= index %>" class="collapse show" aria-labelledby="headingWeek<%= index %>" data-parent="#accordionWeek">
          <% week.each_with_index do |day, index| %>
            <div class="card-body px-3">
              <!-- Jour -->
              <div class="d-flex align-items-center justify-content-between">
                <div class="ml-5">
                  <h2 class="h6 text-primary">
                    <i class="far fa-dot-circle mr-2"></i> 
                    J<%= index + 1 %> - <%= day.strftime('%d %B') %>
                  </h2>
                </div>
                <button id="collapse-btn" class="btn btn-primary mr-5" type="button" data-toggle="collapse" data-target="#collapseDay<%= index %>" aria-expanded="false" aria-controls="collapseDay<%= index %>">
                  <!-- Comment changer le texte en Voir moins ?-->
                  Voir plus
                </button>
              </div>
              <hr>
              <% if @trip.events_by_date(day).length == 0 %>
                <div class="collapse text-secondary text-center" id="collapseDay<%= index %>">
                  Rien de prévu !
                </div>
              <% else %>
              <%= render partial: "event", collection: @trip.events_by_date(day),
           as: :event, locals: {index: index} %>
              <% end %>
              <!--./ Jour -->
            </div>
          <% end %>
        </div>
        <!--./ Affichage Journée-->
      <% end %>
      <!-- ./ Affichage numéro de semaine dans le card-header -->
    </div>
    <!--./ Affichage semaines dans une card -->
  </div>
  <!-- ./ Accordeon -->
</div>
