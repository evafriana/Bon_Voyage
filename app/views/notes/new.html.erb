<div class="container my-5">
  <h1 class="text-center">Créer mes nouvelles Notes</h1>
    <div class="container py-3 mx-auto col-7 my-5">
      <div class="row justify-content-center">
        <div class="col-md-12">

          <%= form_for @note, url: {action: "create"}  do |form| %>

            <div class="form-group mb-4">
              <%= form.label :title, 'Titre' %>
              <%= form.text_field :title, class: 'form-control', placeholder: 'Tour Eiffel'%>
            </div>

            <div class="form-group mb-4">
              <%= form.label :text, 'Notes' %>
              <%= form.text_field :text, class: 'form-control', placeholder: 'Viste des musées de Paris'%>
            </div>

            <div class="form-group mb-4">
              <%= form.label :image_url, 'Image avec son URL' %>
              <%= form.text_area :image_url, class: 'form-control', placeholder: 'https://images.unsplash.com/photo' %>
            </div>

            <div class="actions mt-5 text-center mb-5">
              <%= form.submit 'Enregistrer mes Notes', class: 'btn btn-primary btn-lg btn-block' %>
            </div>

          <% end %>

        </div>
      </div>
    </div>
</div>