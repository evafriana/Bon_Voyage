<!-- Modal -->
<div class="modal fade" id="myModalImageUrlEdit<%= note.id %>" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Modifier mon image</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">

        <%= form_with url: trip_event_note_path(@trip, event, note), method: "patch", local: true do |form| %>

        <div class="form-group mb-4">
          <%= form.label :image_url, "Importer une photo Ã  partir d'une URL" %>
          <%= form.text_area :image_url, value: note.image_url, class: 'form-control' %>
        </div>

      </div>

      <div class="modal-footer text-center">
        <div class="container">
          <%= form.submit 'Modifier mon image', class: 'btn btn-primary btn-lg mx-auto' %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>