<!-- Modal -->
<div class="modal fade" id="myModalNoteNew<%= event.id %>" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Ajouter une note</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">

        <%= form_with model: @note, url: trip_event_notes_path(@trip, event), method: "post" do |form| %>

        <div class="form-group mb-4">
          <%= form.label :text, 'Vos notes, informations ou liens' %>
          <%= form.text_area :text, class: 'form-control', placeholder: 'Viste des musées de Paris'%>
        </div>

      </div>

      <div class="modal-footer text-center">
        <div class="container">
          <%= form.submit 'Enregistrer ma note', class: 'btn btn-primary btn-lg mx-auto' %>
        </div>
        <% end %>
        <div class="container">
          <%= link_to "Revenir en arrière", :back , class: 'btn btn-secondary btn-sm mn-5' %>
        </div>
      </div>

    </div>
  </div>
</div>