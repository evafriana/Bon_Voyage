<div class="container">

  <h1 class="text-center">Modifier mes Notes</h1>

<%= form_for @note, url: {action: "update"}  do |form| %>

    <div class="form-group">
      <div class="row">
        <div class="col-6">
          <%= form.label :title, 'Titre' %>
          <%= form.text_field :title, class: 'form-control', placeholder: ''%>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :text, 'Donnez un nom à votre évènement' %>
      <%= form.text_field :text, class: 'form-control', placeholder: '' %>
    </div>

    <div class="form-group">
      <%= form.label :image_url, 'Mettre une image' %>
      <%= form.text_area :image_url, class: 'form-control', placeholder: '' %>
    </div>

    <div class="actions mt-3 text-center">
      <%= form.submit 'Enregistrer mes Notes', class: 'btn btn-success btn-lg btn-block' %>
    </div>

  <% end %>

</div>