<div class="container py-3 mx-auto col-7 my-5">
  <div class="row justify-content-center">
    <div class="col-md-12">

      <%= form_for @trip do |form| %>

        <div class="form-group mb-4">
          <%= form.label :title, 'Titre' %>
          <%= form.text_field :title, class: 'form-control', placeholder: 'Donner un nom à votre voyage',required: true %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :description, 'Description' %>
          <%= form.text_area :description, class: 'form-control', placeholder: 'Mettre un mot sur votre voyage', required: true %>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-6">
              <%= form.label :country_name, "Pays d'arrivée" %>
              <%= form.text_field :country_name, placeholder: 'France', class: 'form-control' %>
            </div>
            <div class="col-6">
              <%= form.label :city_name, "Ville d'arrivée" %>
              <%= form.text_field :city_name, placeholder: 'Paris', class: 'form-control city-name' %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-6">
              <%= form.label :start_date, "Date de début" %>
              <%= form.date_field :start_date, class: 'form-control', required: true %>
            </div>
            <div class="col-6">
              <%= form.label :end_date, "Date de fin" %>
              <%= form.date_field :end_date, class: 'form-control', required: true %>
            </div>
          </div>
        </div>

        <div class="actions mt-5 text-center mb-2">
          <%= form.submit 'Enregistrer mon voyage', class: 'btn btn-primary btn-lg btn-block' %>
        </div>

      <% end %>
      <%= link_to "Revenir en arrière", :back , class: 'mb-5'%>
    </div>
  </div>
</div>
